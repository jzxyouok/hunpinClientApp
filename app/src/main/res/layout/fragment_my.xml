<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MyFragment"
    >

    <include layout="@layout/title_bar_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_250PX"
            android:padding="@dimen/DIMEN_20PX"
            android:background="@color/green_6fc80e">

            <tianxing.app.callcall.customer.view.RoundImageView
                android:id="@+id/my_head_img"
                android:layout_width="@dimen/DIMEN_150PX"
                android:layout_height="@dimen/DIMEN_150PX"
                android:padding="@dimen/DIMEN_50PX"
                android:layout_centerVertical="true"
                android:src="@mipmap/cam2x_normal"

                zq:border_outside_color="#ba3456"
                zq:border_thickness="1dp"
                />

            <TextView
                android:id="@+id/my_btn_nickness"
                android:layout_alignBottom="@id/my_head_img"
                android:layout_toRightOf="@id/my_head_img"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"
                android:text="赵强"
                android:textSize="@dimen/DIMEN_35PX"
                />

            <TextView
                style="@style/MyTextToBtnStyle"
                android:id="@+id/my_btn_reg"
                android:text="注册/登录>"
                android:layout_alignBottom="@id/my_btn_nickness"
                />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
