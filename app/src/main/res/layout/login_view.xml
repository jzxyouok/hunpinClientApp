<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/DIMEN_30PX"
    android:paddingRight="@dimen/DIMEN_30PX"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginTop="@dimen/DIMEN_30PX">

        <ImageView
            android:id="@+id/iv_cellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:src="@mipmap/phone" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_cellphone"
            android:background="@android:color/transparent"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/DIMEN_36PX" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/gray_f4f4f4_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginBottom="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX">

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:src="@mipmap/pwd" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_password"
            android:background="@android:color/transparent"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/DIMEN_36PX" />

        <ImageView
            android:id="@+id/return_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@mipmap/returnpwd" />
    </RelativeLayout>

</LinearLayout>